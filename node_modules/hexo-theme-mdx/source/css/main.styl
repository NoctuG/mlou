html{
	width 100%
	body {
		@import "_partial/drawer.styl"
		@import "_partial/title.styl"
		@import "_partial/mainContent"
		@import "_partial/footer"
		&.mdui-theme-layout-dark{
			@import "_partial/dark"
		}
		&.mdui-theme-layout-auto{
			@media (prefers-color-scheme: dark) {
				@import "_partial/dark"
			}
		}
		button#goToTopBtn{
			z-index 100
		}
		div#searchDialog{
			padding 15px
			overflow-y scroll
			div#searchResultContainer{
				min-height 500px
				margin 0
				div.searchResultItem{
					margin 20px 0
					a.searchResultItemTitle{
						font-size 1.2em
						font-weight bold
						text-decoration none
					}
					div.searchResultItemContent{
						font-size 0.8em
						span.searchResultItemMatched{
							font-weight bold
							background #ff0
							color #000
						}
					}
				}
			}
		}
	}
}